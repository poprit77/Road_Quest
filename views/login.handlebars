<article class="grid">
    <div>
        <hgroup>
            <h1>Sign in</h1>
            <h2>Road Quest - Start your road trip adventure</h2>
        </hgroup>
        <form class="form login-form">
            <label for="email-login">email:</label>
            <input type="text" id="email-login" name="email" placeholder="Email" aria-label="email" autocomplete="email"
                required>
            <label for="password-login">password:</label>
            <input type="password" id="password-login" name="password" placeholder="Password" aria-label="Password"
                autocomplete="current-password" required>
            <fieldset>
                <label for="remember">
                    <input type="checkbox" role="switch" id="remember" name="remember">
                    Remember me
                </label>
            </fieldset>
            <button class="btn btn-primary" type="submit">login</button>
        </form>
    </div>
    <div></div>
</article>

<script src="/js/login.js"></script>